<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/jg" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/auction_shop_info_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/name_order_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_toLeftOf="@+id/share_iv"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/auction_shop_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:gravity="left|center"
                        android:text="美味坚果"
                        android:textColor="#333333"
                        android:textSize="18dp" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/share_iv"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:paddingTop="5dp"
                    android:src="@mipmap/follow_icon" />
            </RelativeLayout>


            <TextView
                android:id="@+id/auction_shop_name_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_order_layout"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="10"
                android:paddingLeft="15dp"
                android:text=""
                android:textColor="#ABABAB"
                android:textSize="12sp"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:id="@+id/auction_start_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/auction_state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="#991B10"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/auction_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="2000"
                    android:textColor="#991B10"
                    android:textSize="24sp" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/line_spec"
            style="@style/HorizontalLineStyle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/addres_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="22dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="上海市,黄浦区,人民广场,001号 | 包邮"
                android:textColor="#666666"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            style="@style/HorizontalLineStyle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />
    </LinearLayout>


</LinearLayout>